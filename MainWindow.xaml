<Window x:Class="miniZapier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:miniZapier"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="80"/>
            <!-- Script Box -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="100"/>
            <!-- Ongoing -->
            <RowDefinition Height="*"/>
            <!-- Executed -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Automation" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Script Input -->
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#DDD" CornerRadius="5" Padding="5">
            <TextBox Name="ScriptBox" 
                     AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" 
                     TextWrapping="Wrap" 
                     BorderThickness="0" 
                     Background="Transparent"/>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="Start" Grid.Column="0" Width="100" Height="35"
                    Background="#4CAF50" Foreground="White" 
                    HorizontalAlignment="Left" Margin="0,0,10,0"
                    Click="Start_Click"/>

            <Button Content="Stop" Grid.Column="1" Width="100" Height="35"
                    Background="#F44336" Foreground="White"
                    HorizontalAlignment="Right" Margin="10,0,0,0"/>
        </Grid>

        <!-- Ongoing Tasks -->
        <Grid Grid.Row="3" Margin="0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Ongoing Tasks" FontWeight="Bold" Margin="0,0,0,5"  />
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="5" Grid.Row="1">
                <TextBlock TextWrapping="Wrap" />
            </Border>
        </Grid>

        <!-- Executed Tasks -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Executed Tasks" FontWeight="Bold" Margin="0,0,0,5"/>
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="5" Grid.Row="1">
                <TextBlock TextWrapping="Wrap" />
            </Border>
        </Grid>
    </Grid>
</Window>
